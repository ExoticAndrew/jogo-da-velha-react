jsx



import React, { useState } from 'react';
import icone from './assets/icon.webp';

function TodoList() {
    const listastorage = localStorage.getItem('lista');
    const [lista, setLista] = useState(listastorage ? JSON.parse(listastorage) : []);
    const [novoItem, setNovoItem] = useState("");

    function adicionarItem(form) {
        form.preventDefault();
        if (!novoItem) return;
        setLista([...lista, { text: novoItem, isCompleted: false }]);
        setNovoItem("");
        document.getElementById('input-entrada').focus();
    }

    function clicou(index) {
        const listaAux = [...lista];
        listaAux[index].isCompleted = !listaAux[index].isCompleted;
        setLista(listaAux);
    }

    function deletar(index) {
        const listaAux = [...lista];
        listaAux.splice(index, 1);
        setLista(listaAux);
    }

    return (
        <div>
            <h1>Lista de Tarefas</h1>
            <form onSubmit={adicionarItem}>
                <input
                    id="input-entrada"
                    type="text"
                    placeholder="Adicione uma tarefa"
                    onChange={(e) => setNovoItem(e.target.value)}
                    value={novoItem}
                />
                <div className='listaTarefas'>
                    {lista.length < 1 ? (
                        <div style={{ textAlign: 'center' }}>
                            <img className="iconeCentral" src={icone} alt="Ãcone" />
                        </div>
                    ) : (
                        lista.map((item, index) => (
                            <div key={index} className={item.isCompleted ? "item completo" : "item"}>
                                <span onClick={() => clicou(index)}>{item.text}</span>
                                <button className="del" onClick={() => deletar(index)}>Deletar</button>
                            </div>
                        ))
                    )}
                </div>
            </form>
        </div>
    );
}

export default TodoList;

